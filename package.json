{
	"name": "test-design-system",
	"version": "0.0.1",
	"scripts": {
		"dev": "pnpm styles && vite dev",
		"watch:css": "pnpx tailwindcss@experimental -i ./src/app.css -o ./src/tailwind.css -w",
		"build": "pnpm styles && pnpm build:css && vite build && npm run package",
		"build:css": "pnpx tailwindcss@experimental -i ./src/app.css -o ./src/tailwind.css -m",
		"prepublishOnly": "echo 'Did you mean to publish `./package/`, instead of `./`?' && exit 1",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"styles": "style-dictionary build -c ./config.cjs"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@storybook/addon-a11y": "^7.2.2",
		"@storybook/addon-essentials": "^7.2.2",
		"@storybook/addon-interactions": "^7.2.2",
		"@storybook/addon-links": "^7.2.2",
		"@storybook/addon-svelte-csf": "^3.0.7",
		"@storybook/blocks": "^7.2.2",
		"@storybook/svelte": "^7.2.2",
		"@storybook/sveltekit": "^7.2.2",
		"@storybook/testing-library": "^0.2.0",
		"@storybook/theming": "^7.2.2",
		"@sveltejs/adapter-auto": "^1.0.0-next.90",
		"@sveltejs/kit": "^1.0.0-next.587",
		"@sveltejs/package": "^1.0.0-next.6",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-storybook": "^0.6.13",
		"eslint-plugin-svelte3": "^4.0.0",
		"mdsvex": "^0.11.0",
		"postcss": "^8.4.24",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"storybook": "^7.2.2",
		"style-dictionary": "^3.8.0",
		"svelte": "^3.54.0",
		"svelte-check": "^2.9.2",
		"tailwind-merge": "^1.14.0",
		"tailwindcss": "0.0.0-insiders.237e715",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^4.0.0",
		"vitest": "^0.25.3"
	},
	"type": "module"
}
